{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "dom",
      "esnext",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": false,
    "target": "es6",
    "sourceMap": false,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "baseUrl": "./src"
  },
  "include": ["src/**/*.ts", "tests/**/*.spec.ts", "server.ts", "App.ts"],
  "exclude": ["node_modules"]
}
